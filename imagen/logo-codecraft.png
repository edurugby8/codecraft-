<?xml version="1.0" encoding="UTF-8"?>
<svg width="1200" height="600" viewBox="0 0 1200 600" xmlns="http://www.w3.org/2000/svg" role="img" aria-label="Logo CodeCraft: CC metálico, CodeCraft y tagline">
  <defs>
    <!-- Gradiente metálico verde -->
    <linearGradient id="gradGreenMetal" x1="0" y1="0" x2="0" y2="1" gradientUnits="objectBoundingBox">
      <stop offset="0%" stop-color="#0b4d2b"/>
      <stop offset="22%" stop-color="#16a34a"/>
      <stop offset="50%" stop-color="#9ef7c0"/>
      <stop offset="78%" stop-color="#16a34a"/>
      <stop offset="100%" stop-color="#0a3e24"/>
    </linearGradient>
    <!-- Gradiente metálico violeta -->
    <linearGradient id="gradVioletMetal" x1="0" y1="0" x2="0" y2="1" gradientUnits="objectBoundingBox">
      <stop offset="0%" stop-color="#3b1366"/>
      <stop offset="22%" stop-color="#7c3aed"/>
      <stop offset="50%" stop-color="#d7c2ff"/>
      <stop offset="78%" stop-color="#7c3aed"/>
      <stop offset="100%" stop-color="#2c0f4d"/>
    </linearGradient>

    <!-- Máscaras para abrir el “corte” de cada C -->
    <mask id="cutRight">
      <!-- todo visible por defecto -->
      <rect x="0" y="0" width="1200" height="600" fill="#fff"/>
      <!-- recorte a la derecha del círculo izquierdo -->
      <rect x="620" y="80" width="240" height="280" fill="#000"/>
    </mask>
    <mask id="cutLeft">
      <rect x="0" y="0" width="1200" height="600" fill="#fff"/>
      <!-- recorte a la izquierda del círculo derecho -->
      <rect x="340" y="60" width="240" height="320" fill="#000"/>
    </mask>
  </defs>

  <!-- Marca “CC” -->
  <g transform="translate(0,10)">
    <!-- C izquierda (verde), ligeramente dentro de la violeta -->
    <circle cx="560" cy="200" r="110" fill="none" stroke="url(#gradGreenMetal)" stroke-width="28" stroke-linecap="round" mask="url(#cutRight)"/>
    <!-- C derecha (violeta) -->
    <circle cx="650" cy="200" r="140" fill="none" stroke="url(#gradVioletMetal)" stroke-width="28" stroke-linecap="round" mask="url(#cutLeft)"/>
  </g>

  <!-- Wordmark -->
  <g aria-hidden="true">
    <text x="600" y="400" text-anchor="middle" font-family="Rubik, system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif" font-weight="800" font-size="72">
      <tspan fill="#16a34a">Code</tspan><tspan fill="#7c3aed">Craft</tspan>
    </text>
    <text x="600" y="446" text-anchor="middle" font-family="Rubik, system-ui, -apple-system, Segoe UI, Roboto, Arial, sans-serif" font-size="24" fill="#6b7280">
      Webs que impulsan tu negocio
    </text>
  </g>
</svg>
